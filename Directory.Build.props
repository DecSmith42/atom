<Project>
    <PropertyGroup>
        <Product>Atom</Product>
        <Authors>Declan Smith</Authors>
        
        <Version>1.0.0</Version>
        <Suffix>alpha</Suffix>
        <Build>3</Build>

        <PackageVersion Condition="'$(Suffix)' != ''">$(Version)-$(Suffix).$(Build)</PackageVersion>
        <PackageVersion Condition="'$(Suffix)' == ''">$(Version)</PackageVersion>        
        <AssemblyVersion>$(Version)</AssemblyVersion>
        <FileVersion>1.0.0.$(Build)</FileVersion>
        <InformationalVersion>$(PackageVersion)</InformationalVersion>
    </PropertyGroup>
</Project>